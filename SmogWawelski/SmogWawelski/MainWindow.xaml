                <MenuItem Header="Powiadomienia"/>
            </MenuItem>
            <MenuItem Header="Odśwież"/>
            <MenuItem Header="O nas"/>
        </Menu>
        <Rectangle HorizontalAlignment="Left" Height="46" Margin="322,60,0,0" Stroke="#FF000A79" VerticalAlignment="Top" Width="226" RadiusX="11" RadiusY="9" StrokeThickness="5" Grid.ColumnSpan="2">
